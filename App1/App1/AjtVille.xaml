<Page
    x:Class="App1.AjtVille"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <StackPanel Height="900" >
        <StackPanel Margin="50">
            <TextBox x:Name="tbxNom" Header="Nom de la ville"/>
            <TextBlock x:Name="tblErreurNom" Text="Veuillez entrer un nom de ville valide ." Foreground="Red"  Visibility="Collapsed"/>
            <TextBox x:Name="tbxPost" Header="Code postale de la ville"/>
            <TextBlock x:Name="tblErreurPost" Text="Veuillez entrer un code postale valide . " Foreground="Red"  Visibility="Collapsed"/>
            
        </StackPanel>
        <Button Name="btAjt"  Content="Confirmer"  Click="btAjt_Click"  HorizontalAlignment="Center" Foreground="White" Background="Blue"/>
        <TextBlock x:Name="tblEmp" Text="La ville a ete ajouter ." Foreground="Green"  Visibility="Collapsed"  HorizontalTextAlignment="Center"/>

    </StackPanel>
</Page>
